{
  "manifest_version": 2,
  "name": "WhatsApp Sender",
  "version": "1.0",
  "permissions": ["tabs", "https://api.whatsapp.com/*"],
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "browser_action": {
    "default_title": "Send WhatsApp Message"
  },
  "icons": {
    "16": "icon.png",
    "48": "icon.png",
    "128": "icon.png"
  }
}
